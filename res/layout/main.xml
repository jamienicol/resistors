<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:resistors="http://schemas.android.com/apk/res/org.jamienicol.resistors"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@color/resistor_background"
	>
	<org.jamienicol.resistors.DigitBand
		android:id="@+id/hundredsDigitBand"
		android:layout_width="fill_parent"
		android:layout_height="48dp"
		resistors:default_colour_index="1"
		/>
	<org.jamienicol.resistors.DigitBand
		android:id="@+id/tensDigitBand"
		android:layout_width="fill_parent"
		android:layout_height="48dp"
		resistors:default_colour_index="0"
		/>
	<org.jamienicol.resistors.DigitBand
		android:id="@+id/onesDigitBand"
		android:layout_width="fill_parent"
		android:layout_height="48dp"
		resistors:default_colour_index="0"
		/>
	<org.jamienicol.resistors.MultiplierBand
		android:id="@+id/multiplierBand"
		android:layout_width="fill_parent"
		android:layout_height="48dp"
		resistors:default_colour_index="3"
		/>
	<TextView
		android:id="@+id/resistanceView"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:textColor="@color/resistance_text"
		android:textSize="20sp"
		/>
</LinearLayout>
